    "permissions": [
        "storage",
        "clipboard-write",
        "clipboard-read"
    ],
    "share_target": {
        "action": "/share-target",
        "method": "POST",
        "enctype": "multipart/form-data",
        "params": {
            "title": "name",
            "text": "description",
            "url": "link",
            "files": [
                {
                    "name": "file",

                    "accept": [
                        "audio/*",
                        "video/*"
                    ]
                }
            ]
        }
    }
